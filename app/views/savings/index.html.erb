<%= link_to "/users/#{session[:user_id]}" do %>
  <span class="small-button back-button font-light-blue"><i class="fa fa-chevron-left fa-2x" aria-hidden="true"></i></span>
<% end %>
<div class="banner">
  <h1>All <%= session[:user_name]%>'s Savings</h1>
</div>

<%= information_rendering %>

<div class="object-display total-amount">
    <div class="object-info total">
      <h2>Grand total for savings:</h2>
    </div>
    <div class="object-amount total-result">
      <%= ActiveSupport::NumberHelper.number_to_currency(@savings.total_amount.round(2)) %>
    </div>
</div>
<div class="object-display total-amount">
    <div class="object-info total">
      <h2>Total savings for <%= Date.today.strftime('%B')%>:</h2>
    </div>
    <div class="object-amount total-result">
      <%= ActiveSupport::NumberHelper.number_to_currency(@savings.for_the_month.total_amount.round(2)) %>
    </div>
</div>
<br>
<div class="items-list">
  <%= savings_rendering(@savings) %>
</div>

<%= link_to '/savings/new/0' do %>
  <span class="pseudo-button green new-saving">New Saving</span>
<% end %>