<p id="notice"><%= notice %></p>

<h1>Savings</h1>

<h2>All <%= session[:user_name]%>'s Savings</h2>
<h2>Grand total for savings: $<%= @savings.sum(:amount) %></h2>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Saving Description</th>
      <th>Amount</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @savings.each do |saving| %>
      <tr>
        <td><%= saving.author.name %></td>
        <td><%= saving.name %></td>
        <td><%= saving.amount %></td>
        <td><%= saving.created_at.strftime('%e-%b-%Y') %></td>
        <td><%= link_to 'Show', saving %></td>
        <td><%= link_to 'Edit', edit_saving_path(saving) %></td>
        <td><%= link_to 'Delete', saving, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Saving', new_saving_path %>